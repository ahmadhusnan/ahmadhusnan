podman

sudo firewall-cmd --add-port=6443/tcp --permanent
sudo firewall-cmd --reload

persistent storage docker/podman
in server bare metal or vm 
	mkdir /dir
podman --priviledge run -p (port) -v /dir:/mnt(dir container) -dit (image)
podman exec -it (ID) /bin/bash
podman save (image) -o (name.tar)
podman export (export) -o (name.tar) 
copy image to other server
podman load -i openshift.tar

podman pod list
podman pod create
assign pod with service 
podman run -dt --pod (name/tag) -p(port) ubuntu (command)

